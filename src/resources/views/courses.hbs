	<div class='row'>
		{{#each courses}}
			<div class='col-sm-6 col-lg-4'>
				<div class='card mt-4'>
					<img
						src='{{this.thumbnail_cdn}}'
						class='card-img-top'
						alt='{{this.title}}'
					/>
					<div class='card-body'>
						<h5 class='card-title'>{{this.title}}</h5>
						<p class='card-text'>{{this.description}}</p>
